<div class="password-container">
    <h2>@ViewData["Title"]</h2>
    <form id="change-password-form123" method="post">
      <div class="form-group">
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Old Password" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
      </div>

      <div class="form-group">
            <input asp-for="Input.NewPassword" id="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New Password" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
      </div>

      <div class="password-rules">
        <h4>Password must contain the following:</h4>
        <ul>
          <li><i class="fa-solid fa-xmark"></i> Must be 9 characters long</li>
          <li><i class="fa-solid fa-xmark"></i> Must have one lowercase letter</li>
          <li><i class="fa-solid fa-xmark"></i> Must have one uppercase letter</li>
          <li><i class="fa-solid fa-xmark"></i> Must have one special symbol</li>
        </ul>
      </div>

      <div class="form-group">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm New Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
      </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary btn-update">Update Password</button>
    </form>
  </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
