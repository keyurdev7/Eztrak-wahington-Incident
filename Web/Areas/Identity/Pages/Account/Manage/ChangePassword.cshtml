        /**********************/
    .password-container {
        max-width: 500px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.1);
        margin-top:70px;
    }

        .password-container h2 {
            text-align: center;
            font-size: 22px;
            margin-bottom: 25px;
            font-weight: 600;
        }

    .form-group {
        margin-bottom: 15px;
    }

    input[type="password"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 15px;
        outline: none;
    }

        input[type="password"]:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
        }

    .password-rules {
        border: 1px solid #f87171;
        background: #fef2f2;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

        .password-rules h4 {
            margin: 0 0 10px;
            font-size: 15px;
            font-weight: 600;
            color: #111827;
        }

        .password-rules ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .password-rules li {
            font-size: 14px;
            margin: 6px 0;
            color: #dc2626;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .password-rules li i {
                color: #dc2626;
            }

    .btn-update {
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        background: #f97316;
        color: #fff;
        transition: background 0.2s;
    }

        .btn-update:hover {
            background: #ea580c;
        }
</style>

