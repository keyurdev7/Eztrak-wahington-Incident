@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}

<style>
    .login-input {
        width: 80% !important
    }
</style>


<div class="login-form">
    <h2 class="text-center">Login</h2>
    <form id="account" method="post" class="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-4">
            <span class="input-group-text" id="login-username"><i class="fa-solid fa-user"></i></span>
            <input type="text" class="form-control login-input" asp-for="Input.Email" placeholder="Username" aria-label="Username" aria-describedby="login-username" />

            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-group mb-4">
            <span class="input-group-text" id="login-password"><i class="fa-solid fa-lock"></i></span>
            <input type="password" asp-for="Input.Password" class="form-control login-input" placeholder="Password" aria-label="Password" aria-describedby="login-password" />

            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-4 form-check">
            <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="login-remember" />
            <label class="form-check-label" for="login-remember">Remember me</label>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <input id="login-submit" type="submit" class="btn" value="Log in" />
            <a asp-area="Identity" asp-page="/Account/ForgotPassword" class="forgot-pass">Forgot Password</a>
        </div>
    </form>
    <p style="text-align:center;">
        <a class="text-white" asp-area="Identity" asp-page="/Account/LoginUsingPincode" title="Login Using Pincode">Login using Pincode</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
