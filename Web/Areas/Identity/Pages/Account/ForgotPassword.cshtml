@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}
<style>
    .login-input {
        width: 80% !important
    }
</style>

<div class="login-form">
    <h2 class="text-center">Forgot Password</h2>
    <form id="account" method="post" class="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-4">
            <span class="input-group-text" id="login-username"><i class="fa-solid fa-user"></i></span>
            <input type="text" class="form-control login-input" asp-for="Input.Email" placeholder="Email" aria-label="Username" aria-describedby="login-email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mb-2">
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
