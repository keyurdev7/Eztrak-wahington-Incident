@using System.Web
@using ViewModels
@model RelationshipModifyViewModel

<form id="NewSourceForm">
    <div class="list-item addItem" id="saveSourceDiv">

        <input type="hidden" value="@Model.Id" name="Id" id="source_@Model.Id" />

        <div class="input-container">
            <input type="text" placeholder="Enter source" asp-for="Name">
            <button class="btn check saveSource"><i class="fa-solid fa-check"></i></button>
            <button class="btn cancel cancelSource"><i class="fa-solid fa-xmark"></i></button>
        </div>
    </div>
</form>