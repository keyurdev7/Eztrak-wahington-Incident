@using System.Web
@using ViewModels
@model List<StatusLegendModifyViewModel>

@if (Model != null && Model.Count > 0)
{
    @foreach (var sl in Model)
    {
        <div class="list-item">
            <div class="item-info">
                <strong>@sl.Name</strong>
                <p>@sl.Description</p>   @* <- added *@
                <p>@sl.Color</p>
            </div>
            <div class="actions">
                <i class="fa-regular fa-edit edit editStatusLegend" id="@sl.Id"></i>
                <i class="far fa-trash-alt delete deleteStatusLegend" id="@sl.Id"></i>
            </div>
        </div>
    }
}
else
{
    <div class="list-item">
        <span>No status legend found.</span>
    </div>
}
