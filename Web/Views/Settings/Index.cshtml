        // Show main container
        document.getElementById('mainContainer').classList.remove('hidden');
        // Hide both user and team management sections
        document.getElementById('userManagement').classList.add('hidden');
        document.getElementById('teamManagement').classList.add('hidden');

        // Reset active tab in sidebar
        document.querySelectorAll(".sidebar ul li").forEach(el => el.classList.remove("active"));
        document.querySelector('.sidebar ul li[data-tab="source"]').classList.add("active");

        // Hide all tab content
        document.querySelectorAll(".tab-content").forEach(content => content.classList.remove("active"));
        // Show source tab content
        document.getElementById('source').classList.add("active");
    }




