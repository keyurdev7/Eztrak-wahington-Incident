@using System.Web
@using ViewModels
@model ProgressModifyViewModel

<form id="NewProgressForm">
    <div class="list-item addItem" id="saveProgressDiv">

        <input type="hidden" value="@Model.Id" name="Id" id="progress_@Model.Id" />

        <div class="input-container">
            <input type="text" placeholder="Enter Status Master" asp-for="Name">
            <button class="btn check saveProgress"><i class="fa-solid fa-check"></i></button>
            <button class="btn cancel cancelProgress"><i class="fa-solid fa-xmark"></i></button>
        </div>
    </div>
</form>