        .incident-table input[type="checkbox"] {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            width: 18px;
            height: 18px;
            border: 2px solid #555;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
            vertical-align: middle;
            margin: 0;
            outline: none;
            background-color: #fff;
            transition: all 0.2s ease-in-out;
        }

            /* When checked */
            .incident-table input[type="checkbox"]:checked {
                background-color: #007bff;
                border-color: #007bff;
            }

                /* Tick mark */
                .incident-table input[type="checkbox"]:checked::after {
                    content: "";
                    position: absolute;
                    left: 5px;
                    top: 1px;
                    width: 5px;
                    height: 10px;
                    border: solid #fff;
                    border-width: 0 2px 2px 0;
                    transform: rotate(45deg);
                }

        .incident-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .incident-table th, .incident-table td {
