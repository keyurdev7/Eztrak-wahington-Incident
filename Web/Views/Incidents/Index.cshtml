<script>
    (function () {
        async function loadAdditionalLocations(incidentId) {
            const url = `/Incidents/GetAdditionalLocations?incidentId=${incidentId}`;
            const modalBody = document.getElementById('additionalLocationsModalBody');

            modalBody.innerHTML = '<div class="text-center py-3"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>';

            try {
                const resp = await fetch(url, {
                    method: 'GET',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                });

                if (!resp.ok) {
                    modalBody.innerHTML = '<div class="alert alert-danger">Failed to load additional locations.</div>';
                    return;
                }

                const html = await resp.text();
                modalBody.innerHTML = html;

                var modalEl = document.getElementById('additionalLocationsModal');
                var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                modal.show();
            } catch (err) {
                modalBody.innerHTML = '<div class="alert alert-danger">An error occurred while loading.</div>';
                console.error(err);
            }
        }

        document.addEventListener('click', function (e) {
            var anchor = e.target.closest && e.target.closest('.more-locations-link');
            if (anchor) {
                var incidentId = anchor.getAttribute('data-incident-id');
                if (incidentId) loadAdditionalLocations(incidentId);
            }
        });
    })();
</script>

