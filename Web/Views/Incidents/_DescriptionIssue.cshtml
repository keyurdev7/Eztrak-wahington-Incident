@using System.Web
@using ViewModels.Incident
@model IncidentViewModel


<div class="shadow-sm border border-gray-200 card-body InfoCard">
    <h6 class="fw-bold mb-3">Description</h6>
    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label" asp-for="DescriptionIssue">Description<span class="text-danger">*</span></label>
                <textarea type="text" class="form-control" rows="4" id="description" placeholder="Provide detailed description of the incident..." required asp-for="DescriptionIssue"></textarea>
            </div>
        </div>
    </div>


    <div class="d-flex justify-content-end gap-2 mt-3 addIncidentBtns">
        @* <button type="button" class="btn btnBack" id="backButtonToIncidentDtl">Back</button>
        <button type="button" class="btn btn-primary" id="nextToSeverity">Next</button> *@

        <button type="button" class="btn btnBack" id="backButtonToIncidentDtl">Back</button>
        <button type="button" class="btn btn-primary" id="nextToEnvironmental">Next</button>

    </div>
</div>
