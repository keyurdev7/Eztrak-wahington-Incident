                <label class="form-label d-block">Emergency Response Notified?</label>
                <div class="selectRadio">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.EmergencyResponseNotifiedID" id="evacYes" value="1" asp-for="incidentEnvironmentalViewModel.EmergencyResponseNotifiedID">
