                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.GasodorpresentID"
                               id="gasOdorYes" value="1" asp-for="incidentEnvironmentalViewModel.GasodorpresentID">
                        <label class="form-check-label" for="gasOdorYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">

                        @if (Model.Id > 0)
                        {
                            <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.GasodorpresentID"
                                   id="gasOdorNo" value="0" asp-for="incidentEnvironmentalViewModel.GasodorpresentID">
