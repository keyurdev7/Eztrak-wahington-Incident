                        {
                            <input class="form-check-input" type="radio" checked name="incidentEnvironmentalViewModel.GasodorpresentID"
                                   id="gasOdorNo" value="0" asp-for="incidentEnvironmentalViewModel.GasodorpresentID">
                        }
                       
                        <label class="form-check-label" for="gasOdorNo">No</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.GasodorpresentID"
                               id="gasOdorUnknown" value="2" asp-for="incidentEnvironmentalViewModel.GasodorpresentID">
                        <label class="form-check-label" for="gasOdorUnknown">N/A</label>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3 d-flex align-items-center justify-content-start indicators">
                <label class="form-label d-block">Is hissing sound present?</label>
                <div class="selectRadio">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.HissingSoundPresentID"
                               id="hissingYes" value="1" asp-for="incidentEnvironmentalViewModel.HissingSoundPresentID">
                        <label class="form-check-label" for="hissingYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">

                        @if (Model.Id > 0)
                        {
                            <input class="form-check-input" type="radio" name="incidentEnvironmentalViewModel.HissingSoundPresentID"
