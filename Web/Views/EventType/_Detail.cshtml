@using ViewModels
@model EventTypeDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">

        <!-- Name -->
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="Name" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)</div>
                </div>
            </div>
        </div>

        <!-- Description -->
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="Description" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</div>
                </div>
            </div>
        </div>

        <!-- Created On -->
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="CreatedOn" class="form-label fw-600"></label>
                    <div>@Model.CreatedOn.ToString("yyyy-MM-dd")</div>
                </div>
            </div>
        </div>

    </div>
</div>
