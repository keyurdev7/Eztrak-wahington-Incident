@model ViewModels.Guest.GuestUpdateViewModel
@{
    Layout = null;
}



<div class="row">
    <div class="form-group col-6">
        <label asp-for="FirstName" class="form-label fw-600"></label>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="LastName" class="form-label fw-600"></label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    @if(Model.Id < 1)
    {
        <div class="form-group col-6">
            <label asp-for="Email" class="form-label fw-600"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Last Name" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-lg-6">
            <div class="mb-3 form-group">
                <label asp-for="UseAutoGeneratedPassword" class="form-label fw-600"></label>
                <input asp-for="UseAutoGeneratedPassword" id="UseAutoGeneratedPassword" type="checkbox" style="width:40px;" height="40px;" />
                <span asp-validation-for="UseAutoGeneratedPassword" class="validation-invalid-label"></span>
            </div>
        </div>
        <div class="row password-div">
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Password" class="form-label fw-600"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="off" />
                    <span asp-validation-for="Password" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="ConfirmPassword" class="form-label fw-600"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>
    }
</div>
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="UserId" />
<input type="hidden" asp-for="Email" />

<script>
    $(document).ready(function () {
        togglePasswordDivVisibility();

        $('#UseAutoGeneratedPassword').change(function () {
            togglePasswordDivVisibility();
        });

        function togglePasswordDivVisibility() {
            var useAutoGeneratedPassword = $('#UseAutoGeneratedPassword').is(':checked');
            if (useAutoGeneratedPassword) {
                $('.password-div').hide();
            } else {
                $('.password-div').show();
            }
        }
    });
   
</script>