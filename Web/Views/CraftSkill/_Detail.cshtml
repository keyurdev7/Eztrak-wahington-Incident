@using ViewModels
@model CraftSkillDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3 form-group d-flex">
                    <label asp-for="Name" class="form-label detail-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)</div>
                </div>

                <div class="mb-3 form-group d-flex">
                    <label asp-for="DTRate" class="form-label detail-label fw-600"></label>
                    <div>@Model.DTRate</div>
                </div>

                <div class="mb-3 form-group d-flex">
                    <label asp-for="OTRate" class="form-label detail-label fw-600"></label>
                    <div>@Model.OTRate</div>
                </div>

                <div class="mb-3 form-group d-flex">
                    <label asp-for="STRate" class="form-label detail-label fw-600"></label>
                    <div>@Model.STRate</div>
                </div>
            </div>
        </div>
    </div>
</div>
