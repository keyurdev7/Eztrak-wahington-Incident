@using ViewModels
@model DynamicColumnDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3 form-group d-flex">
                    <label asp-for="Title" class="form-label detail-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Title) ? "-" : Model.Title)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group d-flex">
                    <label asp-for="Name" class="form-label detail-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group d-flex">
                    <label asp-for="Type" class="form-label detail-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.FormattedType) ? "-" : Model.FormattedType)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group d-flex">
                    <label asp-for="EntityType" class="form-label detail-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.FormattedEntityType) ? "-" : Model.FormattedEntityType)</div>
                </div>
            </div>
        </div>
    </div>
</div>

