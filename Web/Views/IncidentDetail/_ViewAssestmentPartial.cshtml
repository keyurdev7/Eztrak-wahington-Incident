@model ViewModels.Incident.IncidentAssessmentReadViewModel

<!-- Update Incident Assessment Modal -->
<div class="modal fade" id="viewIncidentAssestmentModal" tabindex="-1" aria-labelledby="viewIncidentAssestmentModallabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="viewIncidentAssestmentModallabel">View Incident Assessment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="viewIncidentAssessmentForm">
                    <input type="hidden" id="assessmentId" value="@Model.Id" />
                    <input type="hidden" id="mainstepId" value="@Model.MainStepId" />
                    <input type="hidden" id="substepId" value="@Model.SubStepId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group d-flex align-items-center">
                                <label class="form-label">Main Step</label>
                                <label asp-for="@Model.MainStep">: <b>@Model.MainStep</b></label>
                            </div>
                            <div class="form-group d-flex align-items-center ">
                                <label class="form-label">Status</label>
                                <label asp-for="@Model.StatusId">: <b>@Model.Status</b></label>
                            </div>
                            
                            <div class="d-flex align-items-center row">
                            <!-- Started (Time only) -->
                                <div class="form-group col-md-6 d-flex align-items-center">
                                    <label class="form-label">Started</label>
                                    <label asp-for="@Model.StartedTime">: <b>@Model.StartedTime</b></label>
                                </div>

                                <!-- Completed (Time only) -->
                                <div class="form-group col-md-6 d-flex align-items-center">
                                    <label class="form-label">Completed</label>
                                    <label asp-for="@Model.CompletedTime">: <b>@Model.CompletedTime</b></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Description</label>
                                <label asp-for="@Model.Description"><b>@Model.Description</b></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group d-flex align-items-center">
                                <label class="form-label">Sub Step</label>
                                <label asp-for="@Model.SubStep">: <b>@Model.SubStep</b></label>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <label class="form-label">Assignee</label>
                                <label asp-for="@Model.StatusId">: <b>@Model.Assignee</b></label>
                            </div>
                            <div class="form-group">
                              
                                    <label class="form-label">Evidence</label>
                                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                                    {
                                        var imgList = Model.ImageUrl.Split(",", StringSplitOptions.RemoveEmptyEntries)
                                        .Select(img => img.Trim())
                                        .ToList();

                                @foreach (var item in imgList)
                                {
                                    <img src="@item" alt="" style="width: 75px;height: 75px;" />
                                }
                            }
                            else
                            {
                                <div>No evidence provided.</div>
                            }
                        </div>

                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer d-flex justify-content-end">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        flatpickr("#startedTime", { enableTime: true, noCalendar: true, dateFormat: "H:i", time_24hr: true });
        flatpickr("#completedTime", { enableTime: true, noCalendar: true, dateFormat: "H:i", time_24hr: true });
    });
</script>
