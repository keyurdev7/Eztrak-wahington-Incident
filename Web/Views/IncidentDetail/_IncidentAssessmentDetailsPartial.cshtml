@using System.Web
@using ViewModels.Incident
@model IncidentAssessmentDetailViewModel


@if (Model != null)
{
    @if (Model.incidentCommanderDetailViewslist.GroupBy(p => p.Mainstep).ToList().Count > 0)
    {
        bool isFirst = true;
        @foreach (var itemGrpBy in Model.incidentCommanderDetailViewslist.GroupBy(p => p.Mainstep).ToList())
        {
            <div class="d-flex align-items-center justify-content-between section-title">
                <h6 class="fw-semibold  mb-0">
                    @itemGrpBy.Key
                </h6>
                <div class="text-muted small ms-2">
                    Owner: @(Model.MainStepOwners.ContainsKey(itemGrpBy.Key)
                            ? Model.MainStepOwners[itemGrpBy.Key]
                            : "N/A")
    </div>
</div>
<div class="table-responsive table-rounded custom-scroll">
    <table class="table align-middle text-left">

        @if (isFirst)
                    {
                        <thead class="table-light">
                            <tr>
                                <th>Step</th>
                                <th>Status</th>
                                <th>Assignee</th>
                                <th>Started</th>
                                <th>Completed</th>
                                <th>Evidence</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    }
                    <tbody>
                        @foreach (var item in itemGrpBy)
                        {
                            <tr>
                                <td>@item.Substep</td>
                                @if (!string.IsNullOrWhiteSpace(item.Status))
                                {
                                    @if (item.Status.ToLower() == "in progress")
                                    {
                                        <td><span class="status-badge progressing">@item.Status</span></td>
                                    }
                                    else if (item.Status.ToLower() == "not started")
                                    {
                                        <td><span class="status-badge not-started">@item.Status</span></td>
                                    }
                                    else if (item.Status.ToLower() == "done")
                                    {
                                        <td><span class="status-badge done">@item.Status</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="status-badge not-started">@item.Status</span></td>
                                    }
                                }
                                else
                                {
                                    <td><span class="status-badge not-started">Not Started</span></td>
                                }

                                @if (!string.IsNullOrWhiteSpace(item.Assignee))
                                {
                                    <td>@item.Assignee</td>
                                }
                                else
                                {
                                    <td>-</td>
                                }

                                <td>@item.ClockIn</td>
                                <td>@item.ClockOut</td>
                                @if (item.ImageCount > 0)
                                {
                                    <td><i class="fa fa-file-alt text-secondary me-1"></i>@item.ImageCount file </td>
                                }
                                else
                                {
                                    <td><i class="fa fa-file-alt text-secondary me-1"></i></td>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.ClockIn) && !string.IsNullOrWhiteSpace(item.ClockOut) && item.ClockIn != "-" && item.ClockOut != "-")
                                {
                                    <td><a href="#" class="text-primary text-decoration-none" onclick="ViewAssessmentDetails('@Model.Id','@item.MainstepId','@item.SubstepId')">View</a></td>
                                }
                                else
                                {
                                    <td><button class="btn btn-update btn-sm" onclick="EditAssessmentDetails('@Model.Id','@item.MainstepId','@item.SubstepId')">Update</button></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            isFirst = false;
        }
    }
    else
    {
        <div class="table-responsive table-rounded custom-scroll">
            <table class="table align-middle text-left">
                <thead class="table-light">
                    <tr>
                        <th>Step</th>
                        <th>Status</th>
                        <th>Assignee</th>
                        <th>Started</th>
                        <th>Completed</th>
                        <th>Evidence</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="7" style="text-align:center">No records found</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
}
else
{
    <div class="table-responsive table-rounded custom-scroll">
        <table class="table align-middle text-left">
            <thead class="table-light">
                <tr>
                    <th>Step</th>
                    <th>Status</th>
                    <th>Assignee</th>
                    <th>Started</th>
                    <th>Completed</th>
                    <th>Evidence</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="7" style="text-align:center">No records found</td>
                </tr>
            </tbody>
        </table>
    </div>
}

