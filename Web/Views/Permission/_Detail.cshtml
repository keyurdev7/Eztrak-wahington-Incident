@using ViewModels.Permission;
@model PermissionDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Name" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Screen" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Screen) ? "-" : Model.Screen)</div>
                </div>
            </div>
        </div>
    </div>
</div>
