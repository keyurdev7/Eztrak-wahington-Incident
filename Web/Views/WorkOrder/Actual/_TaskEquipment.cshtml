@model ViewModels.WorkOrder.CostPerformance.CostPerformanceViewModel
@{
    Layout = null;
    var totalEquipmentCost = Model.EquipmentsCostPerformance.Sum(x => x.ActualCost);
}
<h6 class="text-start">Equipment</h6>
<div class="table-responsive my-3" id="equipmentTable">
    <table class="table table-bordered dataTable">
        <thead>@* class="thead-primary" *@
            <tr>
                <th>Equipment</th>
                <th>Hourly Rate</th>
                <th>Quantity</th>
                <th>Hours</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody class="task-equipment-tbody">
            @if (Model.EquipmentsCostPerformance.Count > 0)
            {
                for (var i = 0; i < Model.EquipmentsCostPerformance.Count(); i++)
                {
                    <tr>
                        <td>
                            <div>@Model.EquipmentsCostPerformance[i].Equipment.Description</div>
                        </td>
                        <td>
                            <div>@Model.EquipmentsCostPerformance[i].HourlyRate</div>
                        </td>
                        <td>
                            <div>@Model.EquipmentsCostPerformance[i].Quantity</div>
                        </td>
                        <td>
                            <div>@Model.EquipmentsCostPerformance[i].Hours</div>
                        </td>
                        <td>
                            <div>@Model.EquipmentsCostPerformance[i].ActualCost.ToString("C")</div>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Records Added.</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><label class="form-label fw-600">Actual Cost</label></td>
                <td class="text-end"><label class="form-label fw-600">@totalEquipmentCost.ToString("C")</label></td>
            </tr>
        </tfoot>
    </table>
</div>
