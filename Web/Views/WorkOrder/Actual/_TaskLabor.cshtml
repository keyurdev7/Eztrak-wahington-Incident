@model ViewModels.WorkOrder.CostPerformance.CostPerformanceViewModel
@{
    Layout = null;
    var totalLaborCost = Model.ActualLaborsCostPerformance.Sum(x => x.ActualCost);
    var totalLaborHours = Model.ActualLaborsCostPerformance.Sum(x => x.ActualHours);
}
<h6 class="text-start">Labor</h6>
<div class="table-responsive my-3" id="laborTable">
    <table class="table table-bordered dataTable">
        <thead>@* class="thead-primary" *@
            <tr>
                <th>Technician</th>
                <th>Craft</th>
                <th>ST Hours</th>
                <th>OT Hours</th>
                <th>DT Hours</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody class="task-labor-tbody">
            @if (Model.TimeSheets.Count > 0)
            {
                for (var i = 0; i < Model.TimeSheets.Count(); i++)
                {
                    <tr>
                        <td>
                            <div>@Model.TimeSheets[i].Technician.Name</div>
                        </td>
                        <td>
                            <div>@Model.TimeSheets[i].Craft.Name</div>
                        </td>
                        <td>
                            <div>@Model.TimeSheets[i].TotalSTHours</div>
                        </td>
                        <td>
                            <div>@Model.TimeSheets[i].TotalOTHours</div>
                        </td>
                        <td>
                            <div>@Model.TimeSheets[i].TotalDTHours</div>
                        </td>
                        <td>
                            <div>@Model.TimeSheets[i].TotalCost.ToString("C")</div>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No Records Added.</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td colspan="1"><label class="text-end form-label fw-600">Total Cost</label></td>
                <td colspan="1"><label class="text-end form-label fw-600">@totalLaborCost.ToString("C")</label></td>
            </tr>
            <tr>
                <td colspan="4"></td>
                <td colspan="1"><label class="text-end form-label fw-600">Total Hours</label></td>
                <td colspan="1"><label class="text-end form-label fw-600">@totalLaborHours</label></td>
            </tr>
        </tfoot>
    </table>
</div>
