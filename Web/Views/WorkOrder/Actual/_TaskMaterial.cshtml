@model ViewModels.WorkOrder.CostPerformance.CostPerformanceViewModel
@{
    Layout = null;
    var totalMaterialCost = Model.MaterialsCostPerformance.Sum(x => x.ActualCost);
}
<h6 class="text-start">Material</h6>
<div class="table-responsive my-3" id="equipmentTable">
    <table class="table table-bordered dataTable">
        <thead>@* class="thead-primary" *@
            <tr>
                <th>Item #</th>
                <th>Material</th>
                <th>Quantity</th>
                <th>UOM</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody class="task-equipment-tbody">
            @if (Model.MaterialsCostPerformance.Count > 0)
            {
                for (var i = 0; i < Model.MaterialsCostPerformance.Count(); i++)
                {
                    <tr>
                        <td>
                            <div>@Model.MaterialsCostPerformance[i].Material.ItemNo</div>
                        </td>
                        <td>
                            <div>@Model.MaterialsCostPerformance[i].Material.Description</div>
                        </td>
                        <td>
                            <div>@Model.MaterialsCostPerformance[i].Quantity</div>
                        </td>
                        <td>
                            <div>@Model.MaterialsCostPerformance[i].UOM</div>
                        </td>
                        <td>
                            <div>@Model.MaterialsCostPerformance[i].ActualCost.ToString("C")</div>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Records Added.</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><label class="form-label fw-600">Actual Cost</label></td>
                <td class="text-end"><label class="form-label fw-600">@totalMaterialCost.ToString("C")</label></td>
            </tr>
        </tfoot>
    </table>
</div>
