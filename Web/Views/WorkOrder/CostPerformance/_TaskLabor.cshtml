@model ViewModels.WorkOrder.CostPerformance.CostPerformanceViewModel
@{
    Layout = null;
    var hideEstimatedCost = ViewData["HideEstimatedCost"] != null ? bool.Parse(ViewData["HideEstimatedCost"].ToString()) : false;
    var totalLaborCost = Model.LaborsCostPerformance.Sum(x => x.Cost);
    var totalLaborActualCost = Model.LaborsCostPerformance.Sum(x => x.ActualCost);
}
<h6 class="text-start">Labor</h6>
<div class="table-responsive my-3" id="laborTable">
    <table class="table table-bordered dataTable">
        <thead>@* class="thead-primary" *@
            <tr>
                <th>Craft</th>
                @if (!hideEstimatedCost)
                {
                    <th>Estimated Hours</th>
                }
                <th>@(hideEstimatedCost ? "Hours" : "Actual Hours")</th>
                @if (!hideEstimatedCost)
                {
                    <th>Estimated Cost</th>
                }
                <th>@(hideEstimatedCost ? "Cost" : "Actual Cost")</th>
            </tr>
        </thead>
        <tbody class="task-labor-tbody">
            @if (Model.LaborsCostPerformance.Count > 0)
            {
                for (var i = 0; i < Model.LaborsCostPerformance.Count(); i++)
                {
                    @await Html.PartialAsync("~/Views/WorkOrder/CostPerformance/_TaskLaborRow.cshtml", Model.LaborsCostPerformance[i], new ViewDataDictionary(ViewData) { { "RowNumber", i } })
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Records Added.</td>
                </tr>
            }
        </tbody>
        <tfoot>
            @if (!hideEstimatedCost)
            {
                <tr>
                    <td colspan="3"></td>
                    <td colspan="1"><label class="text-end form-label fw-600">Estimated Labor Cost</label></td>
                    <td colspan="1"><label class="text-end form-label fw-600">@totalLaborCost.ToString("C")</label></td>
                </tr>
            }
            <tr>
                <td colspan="@(hideEstimatedCost?1:3)"></td>
                <td colspan="1"><label class="text-end form-label fw-600">@(hideEstimatedCost ? "Labor Cost" : "Actual Labor Cost")</label></td>
                <td colspan="1"><label class="text-end form-label fw-600">@totalLaborActualCost.ToString("C")</label></td>
            </tr>
        </tfoot>
    </table>
</div>
