@model List<ViewModels.WorkOrder.WorkOrderCommentViewModel>
<div class="col-12">
    <table class="table table-striped table-bordered">
        <thead>@* class="thead-primary" *@
            <tr>
                <th scope="col">Creator</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Comment</th>
                <th scope="col">Attachments</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var comment in Model)
                {
                    <tr>
                        <td>@(string.IsNullOrEmpty(comment.CreatedBy) ? "-" : comment.CreatedBy)</td>
                        <td>@(comment.FormattedCreatedDate)</td>
                        <td>@(comment.FormattedStatus)</td>
                        <td>
                            <div class="tooltip-container" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="@comment.Comment">
                                @(comment.Comment.Length > 30 ? comment.Comment.Substring(0, 30) + "..." : comment.Comment)
                            </div>
                        </td>
                        <td>
                            <div class="comments-image-container">
                                @await Html.PartialAsync("~/Views/Shared/Crud/DropZoneView/_View.cshtml", comment.ImagesList, new ViewDataDictionary(ViewData) { { "HideLabel", true } })
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Records Added.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(function () {
        $('[data-bs-toggle="tooltip"]').tooltip();
    });
</script>