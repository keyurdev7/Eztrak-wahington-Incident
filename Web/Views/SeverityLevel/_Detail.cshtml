@using ViewModels
@model SeverityLevelDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="Name" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)</div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="Description" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="mb-3 form-group">
                    <label asp-for="Color" class="form-label fw-600"></label>
                    <div>
                        @(string.IsNullOrEmpty(Model.Color) ? "-" : Model.Color)
                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <span style="display:inline-block;width:20px;height:20px;border-radius:50%;margin-left:10px;background-color:@Model.Color;"></span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
