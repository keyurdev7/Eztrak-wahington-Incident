    <script>
        function setNavigation() {
            var path = window.location.pathname;
            //console.log('current path:', path);
            path = path.replace(/\/$/, "");
            path = decodeURIComponent(path);
            $(".btn.btn-nav-line").removeClass('active');
            $(".btn.btn-nav-line ,.nav-dropdown-item").each(function () {
                var href = $(this).attr('href');
                if (href === '/') {
                    if (path === '') {
                        $(this).addClass('active');
                    }
                } else {
                    if (path === href || (href.length > 0 && path.substring(0, href.length) === href && path.charAt(href.length) === '/')) {
                        if ($(this).hasClass("nav-dropdown-item")) {
                            var parent = $(this).attr("attr-parent");
                            $("." + parent).addClass('active');
                        }
                        else
                            $(this).addClass('active');
                    }
                }
            });
        }

        $(function () {
            setNavigation();
        });

        $(document).ready(function() {
            // This ensures the modal has the right-side behavior
            $("#crudModalPanel").on('show.bs.modal', function () {
            $(this).addClass('modal-right');
            });
        });
    </script>
        
