@model ViewModels.BaseSelect2VM
@{
    var prefix = ViewData.TemplateInfo.HtmlFieldPrefix ?? "TaskType";
    var elementId = ViewData["Id"] != null && !string.IsNullOrEmpty(ViewData["Id"].ToString()) ? ViewData["Id"].ToString() : "task-type-id";
    var label = ViewData["Label"] != null && !string.IsNullOrEmpty(ViewData["Label"].ToString()) ? ViewData["Label"].ToString() : "Work Step";
    var hideLabel = ViewData["HideLabel"] != null && !string.IsNullOrEmpty(ViewData["HideLabel"].ToString()) ? ViewData["HideLabel"].ToString() : "false";
}

<div class="form-group">
    @if (hideLabel != null && hideLabel == "false")
    {
        <label class="form-label fw-600 task-type-label">@label</label>
    }

    @Html.DropDownListFor(model => model.Id, new List<SelectListItem>() {
    new SelectListItem()
    {
    Value = (Model!=null&&Model.Id > 0)?Model.Id.ToString():"",
    Text = (Model!=null&&Model.Id > 0)?Model.Select2Text:"",
    Selected = (Model!=null&&Model.Id > 0)?true:false,
    }},
            new
            {
                @id = elementId,
                @class = "task-type form-control disable-field",
                data_val_required = Model?.ErrorMessage,
                data_val = Model?.IsValidationEnabled.ToString().ToLower()
            })
    <input type="hidden" data-identifier="@prefix" data-input-name="Name" name="TaskType.Name" value="@Model.Select2Text" />
    @Html.ValidationMessageFor(x => x.Id, null, new { @class = "validation-invalid-label task-type-error-span" })
</div>
