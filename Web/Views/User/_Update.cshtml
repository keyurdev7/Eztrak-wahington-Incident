@using Enums
@using ViewModels.Users;
@model UserUpdateViewModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="FirstName" class="form-label fw-600"></label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Name" />
                    <span asp-validation-for="FirstName" class="validation-invalid-label"></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Email" class="form-label fw-600"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" autocomplete="off" />
                    <span asp-validation-for="Email" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="form-group col-6">
                <label asp-for="PhoneNumber" class="form-label fw-600"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            @if (Model.Id < 1)
            {
                <div id="password-container" class="row">
                    <div class="col-lg-6">
                        <div class="mb-3 form-group">
                            <label asp-for="Password" class="form-label fw-600"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="validation-invalid-label"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3 form-group">
                            <label asp-for="ConfirmPassword" class="form-label fw-600"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="validation-invalid-label"></span>
                        </div>
                    </div>
                </div>
                <div id="pin-code-container" class="row" style="display:none;">
                    <div class="col-lg-6">
                        <div class="mb-3 form-group">
                            <label asp-for="PinCode" class="form-label fw-600"></label>
                            <input asp-for="PinCode" type="password" class="form-control" placeholder="Pin Code" autocomplete="new-password" />
                            <span asp-validation-for="PinCode" class="validation-invalid-label"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3 form-group">
                            <label asp-for="ConfirmPinCode" class="form-label fw-600"></label>
                            <input asp-for="ConfirmPinCode" type="password" class="form-control" placeholder="Confirm PinCode" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPinCode" class="validation-invalid-label"></span>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group col-lg-12 col-md-12 col-12 mb-3">
                <label asp-for="Role" class="form-label fw-600">Role<span style="color:red"> *</span></label>
                <br />
                @foreach (var role in Model.Roles)
                {
                    <label class="form-label ml-2">
                        <input type="radio" asp-for="Role.Name" value="@role.Name" onchange="handleRoleChange(this)">
                        @role.DisplayName
                    </label>
                }
                <br />
                <span asp-validation-for="Role" class="validation-invalid-label"></span>
            </div>
        </div>
    </div>
</div>
<script>
    function handleRoleChange(element) {
        let technician = '@RolesCatalog.Technician.ToString()';
        var selectedRole = element.value;
        if (selectedRole == technician) {
            $("#pin-code-container").show();
            $("#password-container").hide();
        }
        else {
            $("#pin-code-container").hide();
            $("#password-container").show();
        }

    }
</script>



