@using ViewModels.Manager
@model ManagerDetailViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="FirstName" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.FirstName) ? "-" : Model.FirstName)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="LastName" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.LastName) ? "-" : Model.LastName)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Email" class="form-label fw-600"></label>
                    <div>@(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)</div>
                </div>
            </div>
        </div>
    </div>
</div>
