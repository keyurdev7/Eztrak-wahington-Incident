            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <input asp-for="StreetSweeping" data-val-ignore="true" id="StreetSweeping" type="checkbox" style="width:40px;" height="40px;" />
                    <label asp-for="StreetSweeping" class="form-label"></label>
                    <span asp-validation-for="StreetSweeping" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <input asp-for="ParkwayTree" data-val-ignore="true" id="ParkwayTree" type="checkbox" style="width:40px;" height="40px;" />
                    <label asp-for="ParkwayTree" class="form-label"></label>
                    <span asp-validation-for="ParkwayTree" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <input asp-for="Other" data-val-ignore="true" id="Other" type="checkbox" style="width:40px;" height="40px;" />
                    <label asp-for="Other" class="form-label"></label>
                    <span asp-validation-for="Other" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="Description" class="form-label fw-600"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>
