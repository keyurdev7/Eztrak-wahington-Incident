@{
    ViewData["Title"] = "Success!";
}
<style>
    h1 {
        color: #88B04B;
        font-family: "Open Sans", sans-serif;
        font-weight: 900;
        font-size: 40px;
        margin-bottom: 10px;
    }

    p {
        color: #404F5E;
        font-family: "Open Sans", sans-serif;
        font-size: 20px;
        margin: 0;
    }

    i {
        color: #9ABC66;
        font-size: 100px;
        line-height: 200px;
