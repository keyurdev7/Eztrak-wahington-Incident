@using Enums
@using ViewModels;
@model TicketModifyViewModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">

                <div class="mb-3 form-group">
                    <label asp-for="Category" class="form-label fw-600"></label>
                    <select asp-for="Category" class="form-select"
                            asp-items="@Html.GetEnumSelectList<TicketCategory>()">
                        <option value="">-- Select --</option>
                            </select>
                    <span asp-validation-for="Category" class="validation-invalid-label"></span>
                </div>
                <div class="mb-3 form-group">
                    <label asp-for="Description" class="form-label fw-600"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("~/Views/Shared/Crud/DropZoneView/_Upload.cshtml", Model.ImagesList)
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="Description" value="@Model.Description" />
<input type="hidden" asp-for="Id" />
