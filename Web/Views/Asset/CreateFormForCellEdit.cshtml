                        <span asp-validation-for="AssetClass" class="validation-invalid-label"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3 form-group">
                        <partial name="~/Views/Shared/Select2/AssetType/_AssetTypeHtml.cshtml" for="AssetType"
                                 view-data='new ViewDataDictionary(ViewData) { { "Id", "asset-type-inline-id" } }' />
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="mb-3 form-group">
                        <partial name="~/Views/Shared/Select2/MUTCD/_MUTCDHtml.cshtml" for="MUTCD"
