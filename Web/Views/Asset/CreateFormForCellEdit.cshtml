@using Enums
@using ViewModels;
@model AssetModifyViewModel
@{
    Layout = null;
}
<style>
    #drawingFileListDrop {
        height: 80px;
        border: 5px dashed #dbd6d6;
        width: 390px;
        padding-top: 30px;
        text-align: center;
        font: bold 16px verdana;
        color: #dbd6d6;
    }

    #drawingFileListDrop {
        height: 150px;
        border: 2px dashed #c0c0c0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #888;
        font-weight: 400;
        font-size: 18px;
        font-family: inherit;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
        cursor: pointer;
        padding: 20px;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.03);
    }

        #drawingFileListDrop:hover {
            border-color: #aaa;
            background-color: #f5f5f5;
            color: #666;
        }

        #drawingFileListDrop.drag-over {
            border-color: #6a9bd8;
            background-color: #f0f7ff;
            box-shadow: inset 0 0 15px rgba(106, 155, 216, 0.1);
        }

    .uploaded-file-item:hover {
        text-decoration: underline;
    }

    #drawingFileListDrop.over {
        border: 4px dashed #807e7e;
        color: #807e7e;
    }

    .attachment-box .new-attachment {
        display: inline-block;
        position: relative;
        min-width: 65px;
        height: 26px;
        padding: 2px 8px;
        border: 1px solid #ee7d00;
        background-color: #ee7d00;
        border-radius: 4px;
        font-weight: 400;
        color: #fff;
        transition: all 0.3s;
        cursor: pointer;
        vertical-align: middle;
        overflow: hidden;
    }
</style>
<form id="hidden-asset-create-form">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3 form-group">
                        <label asp-for="SystemGeneratedId" class="form-label fw-600"></label>
                        <input asp-for="SystemGeneratedId" type="text" class="form-control" />
                        <span asp-validation-for="SystemGeneratedId" class="validation-invalid-label"></span>
                    </div>
                </div>
                <div class="col-lg-6">
