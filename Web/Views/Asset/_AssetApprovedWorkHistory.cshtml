@using ViewModels
@model List<WorkOrderDetailViewModel>
@{
    Layout = null;
    var assetId = ViewBag.AssetId;
}
<input type="hidden" id="modal-title" value="Work Order History" />
<div class="container-fluid">
    <table id="asset-history-table" class="table table-bordered dataTable dataTable table-sm w-100">
        <thead>
            @* class="thead-primary" *@
            <tr>
                <th>Work Order #</th>
                <th>Work Order Type</th>
                <th>Task</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SystemGeneratedId</td>
                        <td>@item.Type.ToString()</td>
                        <td>@item.Task</td>
                        <td>@item.FormattedApprovalDate</td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="5">No records found!</td>
                </tr>
            }
        </tbody>
    </table>
</div>


