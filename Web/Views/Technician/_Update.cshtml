@model ViewModels.Technician.TechnicianUpdateViewModel
@{
    Layout = null;
}



<div class="row">
    <div class="form-group col-6">
        <label asp-for="FirstName" class="form-label fw-600"></label>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="LastName" class="form-label fw-600"></label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    @if(Model.Id < 1)
    {
        <div class="form-group col-6">
            <label asp-for="Email" class="form-label fw-600"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Last Name" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
      
        <div class="row password-div">
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="PinCode" class="form-label fw-600"></label>
                    <input asp-for="PinCode" type="password" class="form-control" placeholder="PinCode" autocomplete="off" />
                    <span asp-validation-for="PinCode" class="validation-invalid-label"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3 form-group">
                    <label asp-for="ConfirmPincode" class="form-label fw-600"></label>
                    <input asp-for="ConfirmPincode" type="password" class="form-control" placeholder="Confirm PinCode" />
                    <span asp-validation-for="ConfirmPincode" class="validation-invalid-label"></span>
                </div>
            </div>
        </div>
    }
</div>
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="UserId" />
<input type="hidden" asp-for="Email" />

<script>
    $(document).ready(function () {
        togglePasswordDivVisibility();

        $('#UseAutoGeneratedPassword').change(function () {
            togglePasswordDivVisibility();
        });

        function togglePasswordDivVisibility() {
            var useAutoGeneratedPassword = $('#UseAutoGeneratedPassword').is(':checked');
            if (useAutoGeneratedPassword) {
                $('.password-div').hide();
            } else {
                $('.password-div').show();
            }
        }
    });
   
</script>